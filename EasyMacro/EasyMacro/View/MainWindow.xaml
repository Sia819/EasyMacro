<Window x:Class="EasyMacro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyMacro"
        xmlns:viewmodel="clr-namespace:EasyMacro.ViewModel"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource Locator}, Path=MainViewModelLocate}"
        Title="MainWindow" Height="450" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>


        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <Border Grid.Column="0" Grid.Row="0" 
                    Width="auto" Height="50" 
                    BorderThickness="1" BorderBrush="Black">
                    <TextBlock Text="Macro State"></TextBlock>
                </Border>
                <Button Command="{Binding SaveCommand}" Content="Save" />
                <Button Command="{Binding LoadCommand}" Content="Load" />
            </StackPanel>


            <ListBox Grid.Column="0" Grid.Row="1" 
                     ItemsSource="{Binding MacroList}" >

            </ListBox>


        </Grid>

        <!-- 왼쪽 속성 패널 -->
        <Grid Grid.Column="1" Grid.Row="0">
            <DockPanel>
                <ComboBox DockPanel.Dock="Top" Height="40" >
                    <TextBlock Text="마우스 이동"/>
                    <TextBlock Text="마우스 클릭"/>
                </ComboBox>
                <Border DockPanel.Dock="Bottom"
                            MinHeight="100"
                            BorderThickness="1" BorderBrush="Black">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Image Panel" 
                                   Background="WhiteSmoke"
                                   Grid.Row="0"/>
                        <TextBlock Text="Image Content"
                                   Grid.Row="2"></TextBlock>
                    </Grid>
                    
                </Border>

                <StackPanel>
                    <CheckBox Content="1"></CheckBox>
                    <CheckBox Content="2"></CheckBox>
                </StackPanel>
                

            </DockPanel>
        </Grid>

    </Grid>
</Window>
