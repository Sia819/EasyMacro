<Window x:Class="EasyMacro.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyMacro.View"
        xmlns:viewmodel="clr-namespace:EasyMacro.ViewModel"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource Locator}, Path=MainViewModelLocate}"
        Title="MainWindow" Height="450" Width="700">
    <Window.Resources>
        <ResourceDictionary Source="pack://application:,,,/Theme/ListBoxNoPadding.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- 왼쪽 패널 -->
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- 전체적인 매크로 제어 패널 -->
            <StackPanel Orientation="Horizontal">
                <Border Grid.Column="0" Grid.Row="0" 
                    Width="auto" Height="50" 
                    BorderThickness="1" BorderBrush="Black">
                    <TextBlock Text="Macro State"></TextBlock>
                </Border>
                <Button Command="{Binding SaveCommand}" 
                        Content="Save"/>
                <Button Command="{Binding LoadCommand}" 
                        Content="Load" />
                <Button Command="{Binding StartCommand}" 
                        Content="Start" />
            </StackPanel>

            <!-- 매크로가 보이는 패널 -->
            <ListBox Grid.Column="0" Grid.Row="1" 
                     ItemsSource="{Binding MacroList}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <!--<TextBlock Text="{Binding Name}"></TextBlock>-->
                        <ContentControl>
                            <ContentControl.Style>
                                <Style TargetType="{x:Type ContentControl}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSleep}" Value="false">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate>
                                                        <!-- 1 -->
                                                        <Border BorderBrush="Black" BorderThickness="1"
                                                                Margin="0">
                                                            <Grid Margin="10">

                                                                <TextBlock Text="{Binding Name}"/>

                                                            </Grid>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsSleep}" Value="true">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Grid Margin="0 -20" MinHeight="0">
                                                                <Ellipse x:Name="Border"  Stroke="#FF393785"  StrokeThickness="2" Fill="Transparent"/>
                                                                <DockPanel LastChildFill="True" Margin="10 18 10 23"/>
                                                            </Grid>
                                                        </StackPanel>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>


        </Grid>

        <!-- 왼쪽 속성 패널 -->
        <Grid Grid.Column="1" Grid.Row="0">
            <local:EditProperties/>
        </Grid>

    </Grid>
</Window>
